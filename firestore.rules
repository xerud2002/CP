rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - allow authenticated users to read/write their own data
    match /users/{userId} {
      // Allow read if authenticated and (document ID matches OR uid field matches)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
        (request.auth.uid == userId || resource.data.uid == request.auth.uid);
      allow delete: if isAuthenticated() && 
        (request.auth.uid == userId || resource.data.uid == request.auth.uid);
    }
    
    // Tarife curier collection
    match /tarife_curier/{docId} {
      // Couriers can read/write their own tariffs
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
    
    // Zona acoperire collection
    match /zona_acoperire/{docId} {
      // Couriers can read/write their own coverage zones
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
    
    // Calendar colectii collection
    match /calendar_colectii/{docId} {
      // Couriers can manage their calendar
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.courierId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.courierId == request.auth.uid;
    }
    
    // Profil curier collection
    match /profil_curier/{userId} {
      // Couriers can read/write their own profile
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && userId == request.auth.uid;
      allow update: if isAuthenticated() && userId == request.auth.uid;
      allow delete: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Profil client collection
    match /profil_client/{userId} {
      // Clients can read/write their own profile
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow create: if isAuthenticated() && userId == request.auth.uid;
      allow update: if isAuthenticated() && userId == request.auth.uid;
      allow delete: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Comenzi collection
    match /comenzi/{docId} {
      // Clients can read/write their own orders
      // Couriers can read all orders to see available work
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid_client == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.uid_client == request.auth.uid || resource.data.courierId == request.auth.uid);
      allow delete: if isAuthenticated() && resource.data.uid_client == request.auth.uid;
    }
    
    // Transport aeroport collection
    match /transport_aeroport/{docId} {
      // Couriers can manage their airport transport routes
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
    
    // Transport persoane collection
    match /transport_persoane/{docId} {
      // Couriers can manage their person transport routes
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
  }
}
