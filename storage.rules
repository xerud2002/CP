rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can upload/read their own, everyone can read
    match /profile_images/{userId}/{allPaths=**} {
      // Public read for all authenticated users (to display courier profiles)
      allow read: if request.auth != null;
      // Only owner can write
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Courier documents - owner can upload/read, admins can view
    match /courier_documents/{userId}/{allPaths=**} {
      // Owner and any authenticated user can read (URLs are private in Firestore)
      // Admin verification requires access to these documents
      allow read: if request.auth != null;
      // Only owner can write
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*') 
                       || request.resource.contentType == 'application/pdf');
    }
    
    // Courier verification documents (CI, insurance, etc.)
    match /verification_documents/{userId}/{allPaths=**} {
      // Owner and any authenticated user can read (URLs are private in Firestore)
      // Admin verification requires access to these documents
      allow read: if request.auth != null;
      // Only owner can write
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*') 
                       || request.resource.contentType == 'application/pdf');
    }
    
    // Chat attachments - accessible to all authenticated users (client and courier)
    match /chat_attachments/{orderId}/{allPaths=**} {
      // All authenticated users can read (to view attachments in chat)
      allow read: if request.auth != null;
      // All authenticated users can upload attachments
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024;
    }
    
    // Default - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
